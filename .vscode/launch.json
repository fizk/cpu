{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "-A",
                "${file}"
            ],
            "attachSimplePort": 9229
        },
        {
            "name": "Test",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "test",
                "--inspect-brk",
                "-A",
                "${file}"
            ],
            "attachSimplePort": 9229
        },
        {
            "name": "Single Test",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "test",
                "--filter",
                "${selectedText}",
                "--inspect-brk",
                "-A",
                "${file}"
            ],
            "attachSimplePort": 9229,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },

    ]
}